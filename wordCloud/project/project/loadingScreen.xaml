<Window x:Class="project.loadingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="Loading" Height="175" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="label"  FontSize="30" Content="Loading..." HorizontalAlignment="Left" Margin="73,10,0,0" VerticalAlignment="Top"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="31" Margin="10,65,0,0" VerticalAlignment="Top" Width="263"/>
        <Button x:Name="button" Content="Cancel" HorizontalAlignment="Left" Margin="100,111,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
